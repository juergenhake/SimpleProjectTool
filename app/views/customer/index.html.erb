<%= render partial: '/shared/flash_message'%>
<%= render partial: '/customer/modal/newCustomer' %>
<div class="page-header">
  <h1>Alle Kunden</h1>
</div>
<div class="row">
  <div class="col-md-12", align="right">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newCustomer">
      Neuer Kunde
    </button>
    <br>
  </div>
</div>
<br>
<div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th>Kundennummer SAP</th>
          <th>Kundenname</th>
          <th colspan="2">Kundenbeschreibung</th>
        </tr>
        <% @customers.each do |customer| %>
            <tr>
              <td><%=customer.id%></td>
              <td><%=customer.customer_id_sap%></td>
              <td><%=customer.name%></td>
              <td><%=customer.description%></td>
              <td>
                <%= link_to customer_path(customer), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Kunde öffnen" do %>
                  <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                <%end%>
                <%= link_to edit_customer_path(customer, component: @component), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Kunde ändern" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <%end%>
                <%= link_to customer_path(customer,  component: @component), method: :delete, 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Kunde löschen" do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <%end%>
              </td>
            </tr>
        <%end%>
      </table>
    </div>
</div>