<%= render partial: '/shared/header', locals: {section: 'Alle Kunden', back: false} %>
<%= render partial: '/shared/flash_message'%>
<div class="row">
  <div class="col-md-12", align="right">
    <%= link_to new_customer_path, :class => "btn btn-primary", 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Neuen Kunden anlegen"  do %>
     Neuer Kunde
    <% end %>
    <br>
  </div>
</div>
<br>
<div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th>Kundennummer SAP</th>
          <th>Kundenname</th>
          <th colspan="2">Kundenbeschreibung</th>
        </tr>
        <% @customers.each do |customer| %>
            <tr>
              <td><%=customer.id%></td>
              <td><%=customer.customer_id_sap%></td>
              <td><%=customer.name%></td>
              <td><%=customer.description%></td>
              <td>
                <%= link_to components_path(customer: customer), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Kunde öffnen" do %>
                  <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                <%end%>
                <%= link_to edit_customer_path(customer), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Kunde ändern" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <%end%>
                <%= link_to customer_path(customer), method: :delete, 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Kunde löschen" do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <%end%>
              </td>
            </tr>
        <%end%>
      </table>
    </div>
</div>