<div class="modal fade" id="newAttachmentInTask" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Datei anhängen zur Aufgabe <%=@item.title%></h4>
      </div>
      <div class="modal-body">
        <%= form_for @newFile, url: {controller: "attachment", action: "create"} do |f| %>
            <%= f.hidden_field :task_id, value: @item.id %>
            <div class="field">
              <h5>
               <%= f.label 'Datei' %>
              </h5>
              <%= f.file_field :file %>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Anhängen", class: 'btn btn-primary' %>
        <% end %><br>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->