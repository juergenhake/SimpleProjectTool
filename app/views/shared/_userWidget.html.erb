<% if user_signed_in? %>

<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    Eingeloggt als &nbsp;<strong><%= current_user.first_name %> <%= current_user.last_name %></strong>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <%= link_to edit_user_registration_path, :class => "dropdown_element" do%>
    <li>Profil bearbeiten</li>
    <% end %>
    <%= link_to destroy_user_session_path, method: :delete, :class => "dropdown_element" do%>

      <li>Logout</li>
    <%end%>

  </ul>
</li>
<% else %>
 <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <p class="navbar-text">
      Nicht eingeloggt!&nbsp;
      <%= link_to new_user_registration_path do %>
        <strong>Registrieren</strong>
      <% end %>
      &nbsp;oder&nbsp;
      <%= link_to new_user_session_path do %>
        <strong >Login</strong>
      <% end %>
    </p>
  </div>

<% end %>
