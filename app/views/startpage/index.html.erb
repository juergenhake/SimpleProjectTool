<div class="page-header">
  <h1>Hallo <%= current_user.first_name %> <%= current_user.last_name %>, <small>hier dein Dashboard</small></h1>
</div>
<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">Deine offenen Aufgaben</div>
    <div class="panel-body">
      <div class="row">
          <div class="col-md-12">
            <table class="table table-hover">
              <tr>
                <th>Projekt</th>
                <th>Titel</th>
                <th>Beschreibung</th>
                <th>Ende</th>
              </tr>
              <% @items.each do |item| %>
                  <tr onclick="location.href='<%= project_item_path(item) %>'">
                      <td><%=item.project.title%></td>
                      <td><%=item.title%></td>
                      <td><%=item.description%></td>
                      <td><%=item.end.strftime("%d.%m.%Y")%></td>
                  </tr>
              <%end%>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">Deine Projekte</div>
    <div class="panel-body">
      <div class="row">
          <div class="col-md-12">
            <table class="table table-hover">
              <tr>
                <th>Titel</th>
                <th>Beschreibung</th>
              </tr>
              <% @projects.each do |project| %>
                  <tr onclick="location.href='<%= project_path(project) %>'">
                      <td><%=project.title%></td>
                      <td><%=project.description%></td>
                  </tr>
              <%end%>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>

