<%= render partial: '/components/modal/newComponent' %>
<div class="page-header">
  <h1>Alle Bauteile</h1>
</div>
<div class="row">
  <div class="col-md-12" align="right">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newComponent">
      Neues Bauteil
    </button>
  </div>
</div>
<br>
<div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th>Bauteilenummer SAP</th>
          <th>Bezeichnung</th>
          <th colspan="2">Beschreibung</th>
        </tr>
        <% @components.each do |component| %>
            <tr>
              <td><%= link_to component_path(component), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Bauteil öffnen" do %>
                <%=component.id%><%end%></td>
              <td><%=component.component_id_sap%></td>
              <td><%=component.name%></td>
              <td><%=component.description%></td>
              <td>
                <%= link_to component_path(component), method: :delete, 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Bauteil löschen" do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <%end%>
              </td>
            </tr>
        <%end%>
      </table>
    </div>
</div>