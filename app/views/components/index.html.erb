<%= render partial: '/shared/header', locals: {section: "Alle Bauteile", back: false} %>
<div class="row">
  <div class="col-md-12" align="right">
    <%= link_to new_component_path, :class => "btn btn-primary", 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Neues Bauteil anlegen"  do %>
     Neues Bauteil
    <% end %>
  </div>
</div>
<br>
<div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th>Bauteilenummer SAP</th>
          <th>Bezeichnung</th>
          <th colspan="2">Beschreibung</th>
        </tr>
        <% @components.each do |component| %>
            <tr>
              <td><%=component.id%></td>
              <td><%=component.component_id_sap%></td>
              <td><%=component.name%></td>
              <td><%=component.description%></td>
              <td>
                <%= link_to customer_index_path(component: component), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Bauteil öffnen" do %>
                  <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                <%end%>
                <%= link_to edit_component_path(component), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Bauteil ändern" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <%end%>
                <%= link_to component_path(component), method: :delete, 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Bauteil löschen" do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <%end%>
              </td>
            </tr>
        <%end%>
      </table>
    </div>
</div>