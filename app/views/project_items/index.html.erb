<%= render partial: '/shared/header', locals: {section: @project.component.customer.name + " > " + @project.component.name + " > " + @project.title + " > Alle Aufgaben", back: true} %>
<div class="row">
  <div class="col-md-12" align="right">
    <%= link_to new_project_item_path(project: @project), :class => "btn btn-primary", 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Neue Aufgabe anlegen"  do %>
     Neue Aufgabe
    <% end %>
  </div>
</div>
<br>
<div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <th>#</th>
          <th>Titel</th>
          <th>Beschreibung</th>
          <th>Verantwortlicher</th>
          <th>Start</th>
          <th>Ende</th>
          <th colspan="2">Erledigt am</th>
        </tr>
        <% @items.each do |item| %>
            <tr>
              <td><%=item.id%></td>
              <td><%=item.title%></td>
              <td><%=item.description%></td>
              <td><%=item.user%></td>
              <td><%=item.start%></td>
              <td><%=item.end%></td>
              <td><%=item.finished%></td>
              <td>
                <%= link_to project_item_path(item), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Aufgabe öffnen" do %>
                  <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                  <%= link_to edit_project_item_path(item, project: @project), 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Aufgabe ändern" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <%end%>
                <%= link_to project_item_path(item, project: @project), method: :delete, 'data-toggle'=> "tooltip", 'data-placement' => "bottom", title: "Projekt löschen" do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <%end%>
                <%end%>
              </td>
            </tr>
        <%end%>
      </table>
    </div>
</div>