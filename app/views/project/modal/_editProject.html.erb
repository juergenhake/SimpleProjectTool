<div class="modal fade" id="editProject" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Projekt bearbeiten</h4>
      </div>
      <div class="modal-body">
        <%= form_for @project, url: {action: "update"} do |f| %>
            <%= f.hidden_field :type, value: "Sonstige"  %>
            <div class="field">
              <h5>
                 <%= f.label 'Projekttitel' %>
              </h5>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="field">
              <h5>
                <%= f.label 'Projektbeschreibung' %>
              </h5>
              <%= f.text_area :description, class: 'form-control' %>
            </div>
            <div class="field">
              <h5>
                 <%= f.label 'Projektleiter' %>
              </h5>
              <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :first_and_lastname, @project.user.id), {}, {:multiple => false, :class => "multiselect2", :style => "width:200px;" } %>
            </div>
            <div class="field">
              <h5>
                 <%= f.label 'Reklamation Lieferant' %>
              </h5>
              <%= f.text_field :reklamation_lief, class: 'form-control' %>
            </div>
            <div class="field">
              <h5>
                 <%= f.label 'Lieferscheinnummer' %>
              </h5>
              <%= f.text_field :lief_nr, class: 'form-control' %>
            </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Erstellen", class: 'btn btn-primary' %>
        <% end %><br>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
